{
	"name": "@ydb-platform/ydb-slo-action",
	"type": "module",
	"workspaces": [
		"init",
		"report"
	],
	"packageManager": "bun@1.1.32",
	"scripts": {
		"prepare": "husky",
		"bundle": "npm run --workspaces bundle",
		"format": "npm run --workspaces format",
		"lint": "npm run --workspaces lint"
	},
	"dependencies": {
		"@actions/artifact": "^4.0.0",
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^6.0.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"oxlint": "^1.28.0",
		"prettier": "^3.6.2"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false,
					"singleQuote": false
				}
			}
		]
	},
	"lint-staged": {
		"**/*.{ts,js,json,md}": [
			"bun run --bun oxlint --fix --node-plugin --import-plugin",
			"bun run --bun prettier --write"
		]
	},
	"module": "index.ts"
}
