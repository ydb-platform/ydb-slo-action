{
	"name": "@ydb-platform/ydb-slo-action",
	"type": "module",
	"workspaces": [
		"init",
		"report"
	],
	"packageManager": "bun@1.1.32",
	"scripts": {
		"prepare": "husky",
		"bundle": "turbo run bundle",
		"format": "turbo run format",
		"lint": "turbo run lint"
	},
	"dependencies": {
		"@actions/artifact": "^2.1.11",
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^6.0.0"
	},
	"devDependencies": {
		"@types/bun": "^1.1.13",
		"lint-staged": "^15.2.10",
		"husky": "^9.1.7",
		"oxlint": "^0.15.4",
		"prettier": "^3.3.3"
	},
	"peerDependencies": {
		"typescript": "^5.6.3"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false,
					"singleQuote": false
				}
			}
		]
	}
}
