{
	"name": "@ydb-platform/ydb-slo-action",
	"type": "module",
	"packageManager": "bun@1.3.3",
	"scripts": {
		"prepare": "husky",
		"prebundle": "rm -rf dist",
		"bundle": "bun build init/main.ts init/post.ts report/main.ts --target=node --format=esm --splitting --minify-syntax --sourcemap=inline --outdir dist",
		"format": "bunx --bun prettier **/*.ts --write",
		"lint": "bunx --bun oxlint **/*.ts --fix --node-plugin --import-plugin"
	},
	"dependencies": {
		"@actions/artifact": "^4.0.0",
		"@actions/core": "^2.0.1",
		"@actions/exec": "^2.0.0",
		"@actions/github": "^6.0.0"
	},
	"devDependencies": {
		"@types/bun": "^1.3.2",
		"husky": "^9.1.7",
		"oxlint": "^1.28.0",
		"prettier": "^3.6.2"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"arrowParens": "always",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"tabWidth": 2,
					"useTabs": false,
					"singleQuote": false
				}
			}
		]
	},
	"lint-staged": {
		"**/*.{ts,js,json,md}": [
			"bun run --bun oxlint --fix --node-plugin --import-plugin",
			"bun run --bun prettier --write"
		],
		"{init,report}/**": [
			"sh -c 'bun run bundle'",
			"git add -f dist"
		]
	}
}
